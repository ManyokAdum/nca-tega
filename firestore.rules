rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Example: Members collection with more specific rules
    match /members/{memberId} {
      // Allow users to read their own member document
      allow read: if request.auth != null && request.auth.uid == memberId;
      // Allow admins to read/write all member documents
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Example: Public collections (events, documents, etc.)
    match /events/{eventId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null;
    }
    
    match /documents/{documentId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null;
    }
  }
}

